{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "A web application using React Context API, Hooks, Express and Mongo DB",
  "scripts": {
    "start": "cross-env NODE_ENV=dev npm-run-all --parallel start:client start:server",
    "start:client": "react-scripts start",
    "start:server": "netlify-lambda serve functions",
    "build": "npm-run-all --parallel build:**",
    "build:client": "react-scripts build",
    "build:functions": "netlify-lambda build functions",
    "test": "react-scripts test --env=jsdom"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gak-github/expense-tracker.git"
  },
  "keywords": [
    "\"MERN",
    "React",
    "Hooks",
    "Context",
    "API\""
  ],
  "author": "Asokumar Gurusamy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gak-github/expense-tracker/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "serverless-http": "^2.3.2",
    "axios": "^0.19.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "http-proxy-middleware": "^1.0.1",
    "netlify-lambda": "^1.6.3",
    "npm-run-all": "^4.1.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
